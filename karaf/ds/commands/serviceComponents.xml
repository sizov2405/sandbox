<?xml version='1.0' encoding='utf-8'?>
<scr:component 
	xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" 
	activate="activate" 
	deactivate="deactivate" 
	enabled="true" 
	immediate="true" 
	name="org.apache.karaf.ds.commands.ListCommandComponent">
    <implementation
        class="org.apache.karaf.ds.commands.ListCommandComponent" />
    <reference
        name="scrService"
        interface="org.apache.felix.scr.ScrService"
        bind="setScrService"
        unbind="unsetScrService"
    	policy="static" />
    <reference 
    	bind="setLogService" 
    	cardinality="1..1" 
    	interface="org.osgi.service.log.LogService" 
    	name="LogService" 
    	policy="static" 
    	unbind="unsetLogService"/>
    <property name="osgi.command.scope" type="String" value="scr"/>
    <property name="osgi.command.function" type="String" value="list"/>
    <service>
       <provide interface="org.apache.felix.service.command.Function"/>
       <provide interface="org.apache.karaf.shell.console.CompletableFunction"/>
    </service>
</scr:component>
